<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    tools:context="cs371m.papertelephone.GuessingActivity">

    <EditText
        android:id="@+id/guess_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/guess_button"
        android:hint="@string/guess_hint"
        android:imeOptions="actionDone"
        android:inputType="text" />

    <Button
        android:id="@+id/guess_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/guess_input"
        android:layout_toLeftOf="@+id/timerText"
        android:onClick="guessButtonClicked"
        android:text="@string/guess_button"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/_60"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/guess_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/timerText"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/guess_image_desc" />

</RelativeLayout>