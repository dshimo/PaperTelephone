<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:id="@+id/difficulty"
        android:entries="@array/difficulty_select"
        android:entryValues="@array/difficulty_select"
        android:key="difficulty"
        android:summary="Difficulty"
        android:title="Drawing Prompt" />

    <cs371m.papertelephone.RoundPickerPreference
        android:id="@+id/rounds"
        android:key="rounds"
        android:summary="Currently "
        android:title="Number of Players" />

    <cs371m.papertelephone.TimePickerPreference
        android:id="@+id/drawCountdown"
        android:key="drawCountdown"
        android:summary="Time to draw (seconds) "
        android:title="Drawing Time" />

    <cs371m.papertelephone.TimePickerPreference
        android:id="@+id/guessCountdown"
        android:key="guessCountdown"
        android:summary="Time to guess (seconds) "
        android:title="Guessing Time" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="colorOn"
        android:summary="Color on or color off"
        android:title="Color" />
</PreferenceScreen>