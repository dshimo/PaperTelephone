<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs371m.papertelephone">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".TelephoneCounter"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PreferencesActivity"
            android:label="Preferences"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HowToPlayActivity"
            android:label="How To Play"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DrawingActivity"
            android:label="Draw on Canvas"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GuessingActivity"
            android:label="Guess The Drawing"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ResultsActivity"
            android:label="Results"
            android:screenOrientation="portrait" />
    </application>

</manifest>